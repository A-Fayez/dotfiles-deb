setopt extended_glob

ZSH_SYNTAX="$HOME/dotfiles/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"
ZSH_SUGGESTION="$HOME/dotfiles/zsh-autosuggestions/zsh-autosuggestions.zsh"

# completions
fpath=(~/dotfiles/zsh-completions $fpath)

# compinit

if [[ -f "$ZSH_SYNTAX" ]] && [[ -f "$ZSH_SUGGESTION" ]]; then
    source "$ZSH_SYNTAX"
    source "$ZSH_SUGGESTION"
fi
